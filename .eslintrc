{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "rules": {
        "no-console": "warn",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "prefer-const": "error",
        "indent": ["warn", 4],
        "max-len": ["error", {"code": 120}],
        "semi": ["warn", "always"]
    },
    "plugins": ["jest"]
}
